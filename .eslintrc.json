{
  "extends": "./node_modules/gts/",
  "env": {
    "mocha": true,
    "node": true
  },
  "rules": {
    "node/no-extraneous-require": "off",
    "no-constant-condition": ["error", { "checkLoops": false }]
  },
  "plugins": ["mocha"],
  "overrides": [
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "rules": {
        "@typescript-eslint/interface-name-prefix": "off",
        "@typescript-eslint/no-unused-vars": "off"
      }
    }
  ]
}
